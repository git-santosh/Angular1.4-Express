    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "program": "${workspaceRoot}\\server.js"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "app",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceRoot}"
        }
    ],
    "compounds": [
        {
        "name": "Compound",
        "configurations": ["Server", "app"]
        }
    ]
}